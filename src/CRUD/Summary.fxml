<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="CRUD.DashboardController">
    <VBox alignment="CENTER" prefHeight="400" prefWidth="600" spacing="20" styleClass="background-black" stylesheets="@../../../IslandHosting/src/style.css" AnchorPane.bottomAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.topAnchor="10">
        <Text fill="WHITE" style="-fx-font-size: 24;" styleClass="font-white" text="Summary Report Dashboard" />

        <HBox spacing="10">
            <Label styleClass="font-white" text="From Date:" />
            <DatePicker fx:id="fromDatePicker" styleClass="set-insets" />
            <Label styleClass="font-white" text="To Date:" />
            <DatePicker fx:id="toDatePicker" styleClass="set-insets" />
        </HBox>

        <HBox spacing="20">
            <Button onAction="#handleOrders" styleClass="button-design" stylesheets="/style.css" text="Orders" />
            <Button onAction="#handleSupportTickets" styleClass="button-design" stylesheets="/style.css" text="Support Tickets" />
            <Button onAction="#handlePayments" styleClass="button-design" stylesheets="/style.css" text="Payments" />
            <Button onAction="#handleAuditLogs" styleClass="button-design" stylesheets="/style.css" text="Audit Logs" />
        </HBox>

        <TextArea fx:id="reportArea" editable="false" prefHeight="200.0" prefWidth="389.0" stylesheets="@../style.css" wrapText="true">
         <styleClass>
            <String fx:value="background-marooon" />
            <String fx:value="textarea-dark" />
            <String fx:value="textfield-design" />
         </styleClass></TextArea>
    </VBox>
</AnchorPane>
